@using Connect.Razor.Blade;
@{
    var links = PageData["Links"];
    var Lib = PageData["Lib"];
}

<table @Edit.TagToolbar(Content)>
    <tr>
        <th>Key</th>
        <th>Group</th>
        <th>Title</th>
        <th>Target</th>
        <th title="Enabled or Retired/Disabled">✔️</th>
        <th title="Show to user">👁️</th>
        <th>Tests</th>
        <th>QR</th>
    </tr>       
    @foreach(var link in links) {
        var full = App.Settings.Protocol + App.Settings.ShortDomain + "/" + link.Key;
        var qr = Lib.QrLink(full);
        <tr class="app-shortlinks-table-row">
            <td>
                <a href="javascript:;" onclick="$2sxc(this).manage.run('edit', {entityId: @link.EntityId})">
                    @link.Key
                </a>
            </td>
            <td>
                @{
                    var cat = ((IEnumerable<dynamic>)link.Group).FirstOrDefault();
                    var catTitle = cat != null ? cat.Title : "";
                }
                @catTitle
            </td>
            <td>@link.Title</td>
            <td>
                <a href="@link.Link" target='_blank'>
                    @link.Link
                </a>
            </td>
            <td>@(link.Retired == true ? "🚫" : "✔️")</td>
            <td>@(link.Show == true ? "👁": "")</td>
            <td>
                <a href="@full.Replace("http:","https:")" target="_blank" title="@App.Settings.ShortDomain/@link.Key">
                    🔗
                </a>
                <a href="@Lib.TestLink(link.Key)" target="_blank">
                    #️⃣
                </a>
            </td>
            <td>
                <a href="@qr" target="_blank">
                    QR
                </a>
            </td>
        </tr>
    }
</table>
           